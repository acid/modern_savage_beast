%h1
  = 'Edit Post'[]
%h2
  = link_to h(@post.topic.title), forum_topic_path(@post.forum_id, @post.topic)
= link_to('Delete post'[], post_path(:forum_id => @post.forum_id, :topic_id => @post.topic, :id => @post, :page => params[:page]),  :class => "utility", :method => :delete, :confirm => t("savage_beast.delete_post_conf"))
= error_messages_for :topic
- form_for :post, :html => { :method => :put }, |
- :url  => post_path(:forum_id => params[:forum_id], :topic_id => params[:topic_id], :id => @post, :page => params[:page]) do |f| |
  %p#post_body
    = f.text_area :body
  = submit_tag t("savage_beast.save_title")
  or
  = link_to 'cancel'[], forum_topic_path(:forum_id => params[:forum_id], :topic_id => params[:topic_id], :page => params[:page])
